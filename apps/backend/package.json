{
  "name": "@product-quotation/backend",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@nestjs/common": "11.1.3",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.3",
    "@nestjs/platform-express": "11.1.3",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/typeorm": "11.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "exceljs": "4.4.0",
    "express": "5.1.0",
    "mysql2": "^3.14.1",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.25"
  },
  "nx": {
    "targets": {
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@product-quotation/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@product-quotation/backend:build:development"
          },
          "production": {
            "buildTarget": "@product-quotation/backend:build:production"
          }
        }
      }
    }
  }
}